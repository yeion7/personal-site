@import "../../icomoon/style.css"
@import url(https://fonts.googleapis.com/css?family=Montserrat:400,700)

*
  box-sizing: border-box;

body
  margin: 0
  padding: 0
  font-family: 'Montserrat', sans-serif;
  color: #333
  font-size: 16px

a
  text-decoration: none
  color inherit;


.header
  width: 100%
  height: 72px
  display: flex;
  justify-content: flex-end;
  align-items: center
  padding: 0 15px
  position: relative;


.menu-responsive
  font-size: 2em
  cursor pointer
  @media screen and (min-width: 769px) {
    display: none
  }


.nav
  position: absolute;
  display: none;
  flex-direction: column;
  align-items: center
  justify-content: center;
  top 72px
  left: 0
  background: white
  width: 100%
  transition: all .5s ease
  @media screen and (min-width: 769px) {
    display: flex
    flex-direction: row;
    justify-content: flex-end;
    align-items: center
    position: static;
    height: 72px
    padding: 0 .3em
  }

.link
  display: block;
  padding: 1em
  width: 100%
  text-align: center;
  cursor pointer
  &:hover
    border 1px solid #ccc
    border-radius: 5px
  @media screen and (min-width: 769px) {
    border-bottom: none
    width: auto;
  }

.main
  display: flex
  flex-direction: column
  justify-content: center
  margin-bottom: 2em
  min-height: 85vh
  overflow: hidden
  padding: 0 15px
  width: 100%

  @media screen and (min-width: 769px)
    width: 60%

.nombre
  margin: 5px 0

.perfil
  margin: 5px 0

.ref
  border-bottom: 1px solid #ccc

.icon
  color #aaa
  font-size: 1.5em
  padding: .5em

  &:hover
    border 1px solid #ccc
    border-radius: 50%

.hidden
  display: flex

.proyectos
  align-self: center
  display: flex
  flex-wrap: wrap

.proyecto
  align-items: stretch
  border: 1px solid #ccc
  border-radius: 5px
  display: flex
  flex-direction: column
  height: 300px
  justify-content: flex-start
  margin-bottom: 20px
  margin-right: 10px
  padding: 30px 10px
  width: 330px

  &-links
    display: flex;
    justify-content: space-around;
    align-items: center
    height: 70px
